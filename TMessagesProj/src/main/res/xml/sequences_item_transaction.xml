<?xml version="1.0" encoding="utf-8"?>
<Sequences>

    <Vertical>
        <Span size="16dp"/>
        <Span id="title" size="wrap"/>
        <Span size="8dp"/>
        <Span id="description" size="wrap"/>
        <Span size="16dp"/>
    </Vertical>

    <Vertical start="start@title" end="end@description">
        <Span size="1w"/>
        <Span id="amount" size="wrap"/>
        <Span size="8dp"/>
        <Span id="time" size="wrap"/>
        <Span size="1w"/>
    </Vertical>

    <Vertical end="end@description">
        <Span size="15dp"/>
        <Span id="divider" size="1dp"/>
    </Vertical>

    <Horizontal>
        <Span size="16dp"/>
        <Span id="title" size="1w"/>
        <Span size="8dp"/>
        <Span id="amount" size="wrap"/>
        <Span size="16dp"/>
    </Horizontal>

    <Horizontal>
        <Span size="16dp"/>
        <Span id="description" size="1w"/>
        <Span size="8dp"/>
        <Span id="time" size="wrap"/>
        <Span size="16dp"/>
    </Horizontal>

    <Horizontal>
        <Span id="divider" size="100%"/>
    </Horizontal>

</Sequences>