<?xml version="1.0" encoding="utf-8"?>
<Sequences>

    <Vertical>
        <Span size="20dp"/>
        <Span id="offer_image" size="80dp"/>
    </Vertical>

    <Vertical>
        <Span size="20dp"/>
        <Span size="80dp"/>
        <Span size="16dp"/>
        <Span id="invoice" size="1w"/>
        <Span id="divider" size="12dp"/>
        <Span id="pay" size="44dp"/>
    </Vertical>

    <Vertical end="start@invoice">
        <Span size="20dp"/>
        <Span id="offer_title" size="wrap"/>
        <Span size="4dp"/>
        <Span id="offer_category" size="wrap"/>
        <Span size="1w"/>
        <Span id="purchased_plan_type" size="wrap"/>
        <Span size="16dp"/>
    </Vertical>

    <Vertical start="start@purchased_plan_type">
        <Span id="purchased_plan_details" size="wrap"/>
    </Vertical>

    <Horizontal>
        <Span size="16dp"/>
        <Span id="offer_image" size="80dp"/>
        <Span size="16dp" visibleIf="offer_image"/>
        <Span id="offer_title" size="1w"/>
        <Span size="16dp"/>
    </Horizontal>

    <Horizontal start="start@offer_title" end="end@offer_title">
        <Span id="offer_category" size="100%"/>
    </Horizontal>

    <Horizontal start="start@offer_title" end="end@offer_title">
        <Span id="purchased_plan_type" size="wrap"/>
        <Span id="purchased_plan_details" size="wrap"/>
    </Horizontal>

    <Horizontal>
        <Span size="16dp"/>
        <Span id="invoice" size="1w"/>
        <Span size="16dp"/>
    </Horizontal>

    <Horizontal>
        <Span id="divider" size="100%"/>
    </Horizontal>

    <Horizontal>
        <Span id="pay" size="100%"/>
    </Horizontal>

</Sequences>