<?xml version="1.0" encoding="utf-8"?>
<com.yashoid.sequencelayout.SequenceLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:sequences="@xml/sequences_banktransferinformation">

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <TextView
        android:id="@+id/waiting_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <View
        android:id="@+id/info_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/title_iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <TextView
        android:id="@+id/iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy_iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_bic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <TextView
        android:id="@+id/bic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy_bic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <TextView
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/transferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"/>

    <TextView
        android:id="@+id/button_transferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:gravity="center"/>

</com.yashoid.sequencelayout.SequenceLayout>